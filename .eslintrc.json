{
  "extends": "google",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "rules": {
    "max-len": [ 2, 400 ],
    "indent": [
      2,
      "tab",
      { "SwitchCase": 1 }
    ],
    "object-curly-spacing": [ 0, "always" ],
    "arrow-parens": [ 2, "always" ],
    "newline-after-var": [ 0 ],
    "require-jsdoc": "off",
    "valid-jsdoc": [ 0 ],
    "dot-location": [ 2, "property" ],
    "no-invalid-this": [ 0 ],
    "no-extra-parens":  [2, "functions"],
    "guard-for-in": "off",
    "space-before-function-paren": ["error", {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
    }],
    "no-tabs": "off",
    "linebreak-style": "off",
    "comma-dangle": "off"
  }
}
